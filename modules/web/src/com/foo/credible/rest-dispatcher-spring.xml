<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:security="http://www.springframework.org/schema/security"
       xmlns:mvc="http://www.springframework.org/schema/mvc">

    <!-- Swagger resources -->
    <mvc:resources mapping="swagger-ui.html" location="classpath:/META-INF/resources/"/>
    <mvc:resources mapping="/webjars/**" location="classpath:/META-INF/resources/webjars/"/>
    <mvc:resources mapping="/swagger2/**" location="classpath:/swagger2/"/>

    <bean id="crd_SwaggerConfig" class="com.anzi.credible.web.config.SwaggerConfig"/>

    <security:http pattern="/rest/swagger-**/**" security="none"/>
    <security:http pattern="/rest/swagger2/**" security="none"/>
    <security:http pattern="/rest/webjars/**" security="none"/>

    <!-- Define a base package for your controllers-->
    <context:component-scan base-package="com.anzi.credible.controllers"/>

    <security:http pattern="/rest/**"
                   create-session="stateless"
                   entry-point-ref="oauthAuthenticationEntryPoint"
                   xmlns="http://www.springframework.org/schema/security">
        <!-- Specify one or more protected URL patterns-->
        <intercept-url pattern="/rest/**" access="isAuthenticated()"/>
        <anonymous enabled="false"/>
        <csrf disabled="true"/>
        <cors configuration-source-ref="cuba_RestCorsSource"/>
        <custom-filter ref="resourceFilter" before="PRE_AUTH_FILTER"/>
        <custom-filter ref="cuba_AnonymousAuthenticationFilter" after="PRE_AUTH_FILTER"/>
    </security:http>

    <bean id="crd_OCPRequestInterceptor" class="com.anzi.credible.interceptors.OCPRequestInterceptor"/>
    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <!--
            <exclude-mapping path="/app/rest/swagger-ui.html"/>
            <exclude-mapping path="/app/rest/swagger2/**"/>
            <exclude-mapping path="/app/rest/webjars/**"/>
            -->
            <ref bean="crd_OCPRequestInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!-- The configuration defines a filter that handles CORS request first -->
    <bean id="cuba_RestCorsSource"
          class="org.springframework.web.cors.UrlBasedCorsConfigurationSource">
        <property name="corsConfigurations">
            <map>
                <entry key="/**" value-ref="cuba_RestCorsConfig"/>
            </map>
        </property>
    </bean>

    <bean id="cuba_RestCorsConfig" class="org.springframework.web.cors.CorsConfiguration">
        <property name="allowedOrigins" value="#{'${cuba.rest.allowedOrigins}'.split(',')}"/>
        <property name="allowedHeaders" value="*"/>
        <property name="allowedMethods" value="*"/>
        <property name="allowCredentials" value="true"/>
        <property name="exposedHeaders">
            <list>
                <value>X-Total-Count</value>
                <value>Content-Disposition</value>
            </list>
        </property>
    </bean>

</beans>
