<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.anzi.credible"/>
    
    <!--<gui:screens base-packages="com.anzi.credible"/>-->
    <bean id="credible_proxyCreator" class="com.haulmont.cuba.web.sys.remoting.WebRemoteProxyBeanCreator">
        <property name="serverSelector" ref="cuba_ServerSelector"/>
        <property name="remoteServices">
            <map>
                <entry key="crd_InstitutionService" value="com.anzi.credible.service.InstitutionService"/>
                <entry key="crd_SubmissionService" value="com.anzi.credible.service.SubmissionService"/>
                <entry key="crd_BorrowerService" value="com.anzi.credible.service.BorrowerService"/>
                <entry key="crd_TaskService" value="com.anzi.credible.service.TaskService"/>
                <entry key="crd_UserService" value="com.anzi.credible.service.UserService"/>
                <entry key="crd_ActivityService" value="com.anzi.credible.service.ActivityService"/>
                <entry key="crd_WorkflowService" value="com.anzi.credible.service.WorkflowService"/>
                <entry key="crd_CommentService" value="com.anzi.credible.service.CommentService"/>
                <entry key="crd_NotificationService" value="com.anzi.credible.service.NotificationService"/>
            </map>
        </property>
    </bean>

</beans>
